{
  "name": "wpetestframework",
  "version": "2.0.0",
  "main": "index.js",
  "scripts": {
    "start": "npm run ui:build && npm run ui:serve",
    "ui:build": "cd ui && npm run build",
    "ui:serve": "http-server ./ui/dist -p 2020 -o",
    "test": "echo \"Error: no test specified\" && exit 1",
    "install-all": "npm install && cd ui && npm install && cd ../testrunner && npm install && cd ../cli && npm install",
    "cli:run": "node ./cli",
    "lint": "eslint '**/*.{js,vue}'",
    "lint:fix": "eslint '**/*.{js,vue}' --fix"
  },
  "lint-staged": {
    "*.{js,vue}": [
      "npm run lint:fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/WebPlatformForEmbedded/WPETestFramework.git"
  },
  "author": "Michiel van der Geest <hello@michielvandergeest.com>",
  "bugs": {
    "url": "https://github.com/WebPlatformForEmbedded/WPETestFramework/issues"
  },
  "homepage": "https://github.com/WebPlatformForEmbedded/WPETestFramework#readme",
  "dependencies": {
    "http-server": "^0.11.1"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.1",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.2.0",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-vue": "^5.2.2",
    "husky": "^2.1.0",
    "lint-staged": "^8.1.5",
    "prettier": "^1.17.0"
  }
}
